<h1>New Photo</h1>   
 
<div>
<% if @photo.errors.size.positive? %>
  <div>
    <ul>
      <h2>Something went wrong:</h2>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>


<%= form_with model: @photo do |form| %>
  

  <div>
    <div class="form-label">
        <%= form.label :title%>
    </div>
    <div class="form-text-field">
        <%=form.text_field :title, placeholder: "Big mountain"%>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :description%>
    </div>
    <div class="form-text-area">
        <%=form.text_area :description, placeholder: "Photo taken on ... "%>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :category_id%>
    </div>
   <div class="form-collection">
        <%=form.collection_select :category_id, @categories, :id, :name %>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :image%>
    </div>
    <div>
      <%= form.file_field :image%>
    </div>
  </div>
  <%=form.submit%>
<%end%>
<%=link_to 'Back',category_photo_path(@photo)%>