<h1>Edit Photo</h1>

<% if @photo.errors.size.positive? %>
  <div>
    <ul>
      <h2 class="errors-title">Something went wrong:</h2>
      <% @photo.errors.full_messages.each do |message| %>
        <li class="errors-list"><%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @photo do |form| %>

  <div>
    <div class="form-label">
        <%= form.label :title%>
    </div>
    <div class="form-text-field">
        <%=form.text_field :title%>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :description%>
    </div>
    <div class="form-text-area">
        <%=form.text_area :description%>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :category_id%>
    </div>
    <div class="form-collection">
        <%=form.collection_select :category_id, @categories, :id, :name%>
    </div>
  </div>
  <div>
    <div class="form-label">
        <%= form.label :image%>
    </div>
    <div>
      <% if @photo.image.attached?%>
        <%=image_tag @photo.image%>
      <%end%>
    </div>
    <div>
      <%= form.file_field :image%>
    </div>
    </div>
  <%= form.submit%>
<%end%>

<%=link_to 'Back' , category_photo_path(@photo)%>
