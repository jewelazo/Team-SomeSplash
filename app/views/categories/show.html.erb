<h1><%= @category.name%></h1>
<p><%= @category.description%></p>
<button><%= link_to 'New Photo', new_category_photo_path(category_id: @category.id) %></button>
<div>
  <% @photos.each do |photo| %>
    <div>
      <a href="<%= photo_path(photo)%>">
        <%= image_tag photo.image if photo.image.attached? %>
      </a>
      <h4><%= photo.title %></h4>
      <span><%= photo.comments.count %>
      <%= photo.comments.count > 1 ? "comments" : "comment" %></span>
      <div>
        <button><%= link_to 'Edit', edit_photo_path(photo)%></button>
        <button><%= link_to 'Delete', photo_path(photo), method: :delete, data: { confirm: "Are you sure?" } %></button>
      </div>
    </div>
  <%end%>
</div>
      <%= render @category.comments %>
      <%= render 'comments/forms' %>
