<section>
  <div class="container">
    <h1>Categories</h1>
    <button><%= link_to 'New Category', new_category_path %></button>

    <div class="categories-list">
      <% @categories.each do |category| %>
      <div>
        <a href="<%= category_path(category)%>">
          <%= image_tag category.cover %>
        </a>
        <h3><%= category.name%></h3>
        <span><%= category.photos_count ? category.photos_count : 0%> photos</span>
        <p> <%= category.description%></p>
        <div> 
          <button><%= link_to 'Edit', edit_category_path(category) %></button>
          <button><%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" } %></button>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>
