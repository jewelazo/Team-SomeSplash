<h1>Edit Category</h1>

<%= form_with model: @category  do |form| %>
  <div>
    <div>
      <%= form.label :name%>
    </div>
    <div>
      <%= form.text_field :name%>
    </div>
  </div>

  <div>
    <div>
      <%= form.label :description%>
    </div>
    <div>
      <%= form.text_area :description%>
    </div>
  </div>

  <div>
    <div>
      <%= form.label :cover%>
    </div>
    <div>
      <% if @category.cover.attached?%>
        <%= image_tag @category.cover %>
      <% end %>
  </div>
    <div>
      <%= form.file_field :cover%>
    </div>
  </div>

  <%= form.submit%>
<% end %>
<%= link_to 'Back', categories_path(@category) %>
