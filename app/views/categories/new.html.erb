<h1>New Category</h1>

<% if @category.errors.size.positive? %>
  <div>
    <ul>
      <h2>Something went wrong:</h2>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @category  do |form| %>
  <div>
      <%= form.label :name, class: 'form-label'%>
      <%= form.text_field :name, class: 'form-text-field',  autofocus: true, placeholder: 'Technology'%>
  </div>

  <div>
      <%= form.label :description, class: 'form-label'%>
       <%= form.text_area :namen,class: 'form-text-area', autofocus: true,
       placeholder: 'Exploring our complicated relationship with technology...'%>
  </div>

  <div>
      <%= form.label :cover, class: 'form-label'%>
      <%= form.file_field :cover%>
  </div>

  <%= form.submit%>
<% end %>
<button class="button-back"><%=link_to 'Back' , categories_path %></button>